<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mapper.FacilityInfoMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.entity.FacilityInfo">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,type,name,
        icon,create_time,update_time,
        is_deleted
    </sql>
    <select id="getFacilityInfoByRoomId" resultType="com.atguigu.entity.FacilityInfo">
        select id, type, name, icon
        from facility_info
        where id in (select facility_id
                     from room_facility
                     where is_deleted = 0
                       and room_id = #{id})
          and is_deleted = 0
    </select>
</mapper>
